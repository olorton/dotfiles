set $mod Mod4
set $dotfiles ~/dev/dotfiles

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace 8

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3

# xautolock locks the screen after 5 mins, 10 mins (600s) before the locker
# puts the system in a full hibernation
exec --no-startup-id $dotfiles/bin/power-management --decaffinated

# keybind to toggle caffine
bindsym $mod+c exec --no-startup-id $dotfiles/bin/power-management --toggle-caffine

# exit/lock/suspend/hibernate/reboot/shutdown
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $dotfiles/bin/power-management --lock-screen, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    # Suspend: aka sleep, aka suspend to RAM
    bindsym s exec --no-startup-id $dotfiles/bin/power-management --lock-screen && systemctl suspend, mode "default"
    # Hibernate: aka suspend to disk
    bindsym h exec --no-startup-id $dotfiles/bin/power-management --lock-screen && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode "$mode_system"

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

# Use pactl to adjust volume in PulseAudio.
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +4% && current_value=`(pactl get-sink-volume @DEFAULT_SINK@ VOLUME)|awk '{print $5}'` && notify-send -t 800 -r 738849 "Audio" "Increased ${current_value}"
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -4% && current_value=`(pactl get-sink-volume @DEFAULT_SINK@ VOLUME)|awk '{print $5}'` && notify-send -t 800 -r 738849 "Audio" "Decreased ${current_value}"
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && notify-send -t 800 -r 738849 "Audio" "Muted"
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && notify-send -t 800 -r 738849 "Audio" "Microphone muted"

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next && playerctl position 0
bindsym XF86AudioPrev exec playerctl previous && playerctl position 0
bindsym $mod+XF86AudioLowerVolume exec playerctl play-pause
bindsym $mod+XF86AudioMute exec playerctl previous && playerctl position 0
bindsym $mod+XF86AudioRaiseVolume exec playerctl next && playerctl position 0

# Bind screenshots
bindsym $mod+z exec mkdir -p ~/screenshots && cd ~/screenshots && scrot
bindsym $mod+x exec mkdir -p ~/screenshots && cd ~/screenshots && scrot -s

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 -steps 100 && current_value=`xbacklight -get` && notify-send -t 800 -r 2344123 "Brightness Up" "${current_value%.*} %"
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 -steps 100 && current_value=`xbacklight -get` && notify-send -t 800 -r 2344123 "Brightness Up" "${current_value%.*} %"

